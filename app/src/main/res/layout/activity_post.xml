<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    tools:context="com.example.comp90018.Activity.Home.PostActivity">

    <TextView
        android:id="@+id/page_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/post"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/post_text"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/page_post"/>

    <EditText
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/post_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/input_your_text_here"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:padding="5dp"
        android:background="@drawable/border"
        />

    <Button
        android:id="@+id/button_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/insert_photo"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/post_content"/>

    <ImageView
        android:id="@+id/post_picture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/button_insert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        app:srcCompat="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/post"
            android:id="@+id/button_post"
            android:background="#ff33b5e5"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/button_cancel"
            android:layout_marginStart="50dp"
            android:background="#ff33b5e5"
            android:textColor="#ffffff"/>
    </LinearLayout>


</RelativeLayout>